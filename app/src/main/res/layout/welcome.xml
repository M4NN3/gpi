<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frmMain">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Bienvenid@ Usuario"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/txtW"/>
    <TextView
        android:layout_below="@id/txtW"
        android:id="@+id/txtA"
        android:textSize="18dp"
        android:fontFamily="@font/allerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿A quién deseas cuidar?"
        android:textAlignment="center"/>
        <EditText
            android:layout_marginTop="35dp"
            android:layout_below="@id/txtA"
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la persona"
            android:gravity="center_horizontal"/>
        <EditText
            android:layout_below="@id/txtNombre"
            android:id="@+id/txtFechaNac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Nacimiento"
            android:gravity="center_horizontal"/>
        <EditText
            android:layout_below="@id/txtFechaNac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfeno"
            android:gravity="center_horizontal"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_below="@id/frmMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="17dp">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/old_man"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hombre"
                android:fontFamily="@font/allerta"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/old_woman"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mujer"
                android:fontFamily="@font/allerta"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:text="Guardar"
        android:textSize="17sp"
        android:textStyle="bold" />
</LinearLayout>
